<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AlbumFragment">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/album_layout"
        android:layout_width="match_parent"
        android:layout_height="380dp">
        <ImageView
            android:id="@+id/album_btn_back_Iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/btn_arrow_black"/>

        <ImageView
            android:id="@+id/album_btn_player_more_Iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_player_more"/>

        <ImageView
            android:id="@+id/album_btn_like_off_Iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintEnd_toStartOf="@id/album_btn_player_more_Iv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/ic_my_like_off"/>

        <TextView
            android:id="@+id/album_song_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/album_btn_like_off_Iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="Song Title"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/album_song_singer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_song_title_tv"
            android:layout_marginTop="5dp"
            android:text="song singer"
            android:textSize="15dp"/>
        
        <ImageView
            android:id="@+id/album_song_cover_iv"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_song_singer_tv"
            android:layout_marginTop="5dp"
            android:src="@drawable/img_album_exp6"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


    

</FrameLayout>