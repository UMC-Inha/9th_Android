<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--
    방향이 수직인 가이드라인 10%
    -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="vertical"
        />

    <!--
	  방향이 수평인 가이드라인이
	  세로 기준 10% 위치에 존재
	  -->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.8"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_horizontal"/>

    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="감정우표를 선택해주세요."
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="선택한 감정우표를 기준으로 맞춤형 질문이 배달됩니다."
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_description"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_text_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        app:constraint_referenced_ids="textTitle, title_description, description" />

    <LinearLayout
        android:id="@+id/happy_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emoticon_happy"
            android:layout_width="40dp"
            android:layout_height="37dp"
            android:clickable="true"
            android:src="@drawable/happy" />

        <TextView
            android:id="@+id/text_happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/emoticon_happy"
            android:text="더없이 행복한 하루였어요" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/excite_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emoticon_excite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/excite"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_excite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="들뜨고 흥분돼요" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/normal_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emoticon_normal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/normal"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="평범한 하루였어요" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/anxiety_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emoticon_anxiety"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/anxiety"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_anxiety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="생각이 많아지고 불안해요" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/angry_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/emoticon_angry"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/angry"
            android:clickable="true"/>

        <TextView
            android:id="@+id/text_angry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="부글부글 화가 나요" />
    </LinearLayout>

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:flow_verticalStyle="spread_inside"
        app:flow_verticalGap="15dp"
        app:constraint_referenced_ids="happy_layout,excite_layout,normal_layout,anxiety_layout,angry_layout"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>