<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            android:contentDescription="뒤로가기" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 하루는 어땠나요?"
            android:textSize="30sp"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/gangwonhyunok"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="감정 우표를 선택해주세요"
            android:textSize="22sp"
            android:fontFamily="@font/gangwonhyunok"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
            android:textSize="8sp"
            android:layout_marginTop="16dp"
            />

        <LinearLayout
            android:id="@+id/happyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_yellow" />

            <TextView
                android:id="@+id/happyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="더없이 행복한 하루였어요"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonhyunok"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/excitedCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_blue" />

            <TextView
                android:id="@+id/excitedtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="들뜨고 흥분돼요"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonhyunok"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/normalCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_purple" />

            <TextView
                android:id="@+id/normaltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평범한 하루였어요"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonhyunok"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nervousCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_green" />

            <TextView
                android:id="@+id/nervoustext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="생각이 많아지고 불안해요"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonhyunok"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/angryCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_red" />

            <TextView
                android:id="@+id/angrytext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="부글부글 화가 나요"
                android:textSize="18sp"
                android:fontFamily="@font/gangwonhyunok"/>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>